<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jason.mapper.TeacherMapper">
    <resultMap id="teacherMapper" type="cn.jason.bean.Teacher">
        <id property="tid" column="tid" javaType="String"></id>
        <result property="id" javaType="int" column="id"></result>
        <result property="teacherName" javaType="String" column="teacherName"></result>
        <result column="password" property="password" javaType="String"></result>
        <result property="age" column="age" javaType="int"></result>
        <result property="sex" column="sex" javaType="String"></result>
        <result property="address" column="address" javaType="String"></result>
        <result property="phoneNumber" column="phoneNumber" javaType="String"></result>
        <result property="email" column="email" javaType="String"></result>
        <result property="registerDate" column="registerDate" javaType="java.util.Date"></result>
        <result property="classname" column="classname" javaType="String"></result>
        <result property="status" column="status" javaType="int"></result>
    </resultMap>

    <sql id="base_column">
        id,tid,loginname,teacherName,password,age,sex,address,phoneNumber,email,registerDate,classname,status
    </sql>

    <select id="getUserById" parameterType="String" resultMap="teacherMapper">
        select

        <include refid="base_column"/>

        from t_teacher
        where tid  = #{tid}

    </select>

    <select id="getUserBySex" parameterType="String" resultMap="teacherMapper">
        select
        <include refid="base_column"></include>
        from t_teacher
        where sex = #{sex}
    </select>

    <select id="getAllUser" resultMap="teacherMapper">
        select
        <include refid="base_column"></include>
        from t_teacher
    </select>


    <select id="getUserByNameAndPassword" parameterType="java.lang.String" resultMap="teacherMapper">
        select <include refid="base_column"></include>
        from t_teacher
        where loginname = #{loginname} and password  = #{password}
    </select>

    <select id="getUserByPhone" parameterType="String" resultMap="teacherMapper">
        select <include refid="base_column"></include>
        from t_teacher
        where phoneNumber = #{phoneNumber}

    </select>

    <select id="findTeacherByValid" parameterType="Integer" resultMap="teacherMapper">

        select <include refid="base_column"></include>
        from t_teacher
        where  status  = #{status}
    </select>


</mapper>